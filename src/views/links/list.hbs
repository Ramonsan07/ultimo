<div class="container p4">
    <div class="row">
        {{#each links}}
        <div class="col-md-3 mt-1">
            <div class="card text-center ">
                <div class="card-body">

                    <a href={{URL}} target="_blank"> <h3 class="card-title text-uppercase"> {{TITLE}} </h3> </a>

                    <p class="card-text mt-3"> {{DESCRIPTION}} </p>  
 
                    <a href="links/edit/{{ID}}" class="btn btn-outline-success d-inline-block mt-2">EDITAR</a>

                    <a href="links/delete/{{ID}}" class="btn btn-outline-danger d-inline-block mt-2"> ELIMINAR </a>

                    <p class="card-text text-muted text-left mt-2" style="font-size:0.7rem;" > {{time CREATED_AT}} </p> 

                </div>
            </div>
        </div>
        {{else}}
            <div class="col-md-4 mt-4 mx-auto">
                <div class="card text-center">
                    <div class="card-body mx-auto">
                    <p class="card-title" style="font-size: 1.5rem;">NO TIENE LINKS</p>
                    <a href="/links/add" class="btn btn-success mt-2" style="font-size: 0.7rem;">AGREGAR LINK</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

</div>