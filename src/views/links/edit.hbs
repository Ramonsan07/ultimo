<div class="contaner-p4 mt-5">
    <div class="row mt-1">
        <div class="col-md-3 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{links.ID}}" method="POST">
                    <input type="text" value="{{links.TITLE}}" class="form-control mb-3" name="title" placeholder="title" autofocus>
                    <input type="url" value="{{links.URL}}" name="url" placeholder="url" class="form-control mb-3">
                    <textarea  name="description" rows="2" class="form-control mb-4" placeholder="description">{{links.DESCRIPTION}}</textarea>
                    <button class="btn btn-outline-success btn-block" >EDITAR</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>